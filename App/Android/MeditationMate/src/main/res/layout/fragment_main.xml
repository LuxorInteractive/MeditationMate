<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:text="@string/mm_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:text="Status:"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp">
    </TextView>
    <TextView
        android:id="@+id/status_input"
        android:layout_width="wrap_content"
        android:text="Loading"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="75sp">
    </TextView>
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:text="Message:"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp">
    </TextView>
    <TextView
        android:id="@+id/message_input"
        android:layout_width="wrap_content"
        android:text="Loading"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:layout_marginLeft="75sp">
    </TextView>

    <TextView
        android:id="@+id/meditation"
        android:layout_width="wrap_content"
        android:text="Meditation:"
        android:layout_height="wrap_content"
        android:layout_marginTop="90sp">
    </TextView>
    <TextView
        android:id="@+id/meditation_input"
        android:layout_width="wrap_content"
        android:text="Loading"
        android:layout_height="wrap_content"
        android:layout_marginTop="110sp"
        android:layout_marginLeft="75sp">
    </TextView>

    <TextView
        android:id="@+id/attention"
        android:layout_width="wrap_content"
        android:text="Attention:"
        android:layout_height="wrap_content"
        android:layout_marginTop="110sp">
    </TextView>
    <TextView
        android:id="@+id/attention_input"
        android:layout_width="wrap_content"
        android:text="Loading"
        android:layout_height="wrap_content"
        android:layout_marginTop="90sp"
        android:layout_marginLeft="75sp">
    </TextView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/connect"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="mindwaveConnect"
        android:layout_marginBottom="131dp" />

    <ViewStub
        android:id="@+id/stub_guide"
        android:inflatedId="@+id/panel_guide"
        android:layout_width="fill_parent"
        android:layout="@layout/guide_overlay"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />


</RelativeLayout>
